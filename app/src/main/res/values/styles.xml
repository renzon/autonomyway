<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ListCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="ListRow">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NodeRow">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NodeRowTitle" parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListRowTitle" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListRowTitle.Income">
        <item name="android:textColor">@color/colorIncome</item>
    </style>

    <style name="ListRowTitle.Wealth">
        <item name="android:textColor">@color/colorWealth</item>
    </style>

    <style name="ListRowTitle.Expense">
        <item name="android:textColor">@color/colorExpense</item>
    </style>

    <style name="ListRowDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ListRowDetailTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Form">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="FormTextInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FormButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/formButtonTextColor</item>
    </style>

    <style name="FormButton.Income">
        <item name="android:backgroundTint">@color/colorIncome</item>
    </style>

    <style name="FormButton.Transfer">
        <item name="android:backgroundTint">@color/colorTransfer</item>
    </style>

    <style name="FormButton.Expense">
        <item name="android:backgroundTint">@color/colorExpense</item>
    </style>

    <style name="FormButton.Wealth">
        <item name="android:backgroundTint">@color/colorWealth</item>
    </style>
    <style name="ValueTextView">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="EditImageButton">
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="NodePickerTitle" parent="@style/Base.TextAppearance.AppCompat.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
