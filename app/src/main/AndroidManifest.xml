<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autonomyway">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".component.income.IncomeListActivity"
            android:label="@string/title_activity_income_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.autonomyway.MainActivity" />
        </activity>
        <activity
            android:name=".component.income.NewIncomeActivity"
            android:label="@string/title_new_income_activity"
            android:parentActivityName=".component.income.IncomeListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.autonomyway.component.income.IncomeListActivity" />
        </activity>
        <activity
            android:name=".component.income.EditIncomeActivity"
            android:label="@string/title_edit_income_activity"
            android:parentActivityName=".component.income.IncomeListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.autonomyway.component.income.IncomeListActivity" />
        </activity>
    </application>

</manifest>